{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "paths": {
      "@/config/*": ["src/config/*"],
      "@/lib/utils/*": ["src/lib/utils/*"]
    },
    "forceConsistentCasingInFileNames": true, // Avoid case-related issues
    "skipLibCheck": true // Improve performance by skipping type checks in node_modules
  },
  "compileOnSave": true,
  "include": [
    "src/**/*", 
    "functions/**/*" 
  ],
  "exclude": [
    "node_modules",
    "lib" // Make sure the output directory is excluded
  ]
}
